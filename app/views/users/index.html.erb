
	<div class="container px-5 px-sm-0">
		<div class="row">
					<div class="col-md-3">
						
					  <!--ユーザー情報-->
					    <h2>User info</h2>
							<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", class: "attachment user profile_image fallback" %>
							  <table class="table">
							    <tbody>
							      <tr></tr>
							      <tr>
							        <th>name</th>
							        <th><%= @user.name %></th>
							       </tr>
							        <tr>
							          <th>introduction</th>
							          <th><%= @user.introduction %></th>
							        </tr>
							    </tbody>
							  </table>
					    
					    <!--ユーザー情報編集-->
					    <div class="row">
   							<%= link_to "", edit_user_path(@user.id) ,class:"btn btn-outline-secondary btn-block fas fa-user-cog edit_user_#{@user.id}" %>
  						</div>
					  
					  
			<!--投稿フォーム-->
            <h2>New book</h2>
            	<%= form_with model:@book, local:true do |f| %>
            		<div class="field">
            			<label for="book_title">Title</label></br>
            			<%= f.text_field :title, class:"form-control book_title" %>
            		</div>
            		<div class="field">
            			<label for="book_body">Body</label></br>
            			<%= f.text_area :body, class:"form-control book_body" %>
            		</div>
            		<div class="action">
            			<%= f.submit 'Create Book',class: "btn btn-success" %>
            		</div>
            	<%end%>
            </div>


			
	<div class="col-md-8 offset-md-1">
		<h2>Users</h2>
		    	<table class="table table-striped">
		      		<thead>
		        		<tr>
		          			<th>image</th>
		          			<th>name</th>
		          			<th colspan="3"></th>
		        		</tr>
		    		  </thead>
		    		  <!--繰り返し-->
						    <tbody>
				          <% @users.each do |user| %>
				          <tr>
				          <td>
				            <%= attachment_image_tag user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg",size:'40x40',format: 'no_image.jpg' %>
				          <td>
				            <%= user.name %>
				          </td>
				          <td>
				            <%= link_to"Show", user_path(user.id), class:"user_#{user.id}" %>
				          </td>
				          </tr>
				          <% end %>
				        </tbody>
                
              <!--繰り返しここまで-->
		    	</table>
	</div>
</div>
	
views/users/show.html 

	<div class="container px-5 px-sm-0">
		<div class="row">
					<div class="col-md-3">
					  <div>
					    <div>
					      <h2>User info</h2>
									<%= attachment_image_tag user, :profile_image, size:"100x100", format:'jpeg', fallback:"no_image.jpg" %>
									 <table class="table">
									   <tbody>
									     <tr>
									       <th>name</th>
									       <td><%= user.name %></td>
									     </tr>
									     <tr>
									       <th>introduction</th>
									       <td><%= user.introduction %></td>
									     </tr>
									   </tbody>
									 </table>
									 <%= link_to edit_user_path(user) do %>
									   <div class= "btn btn-outline-secondary btn-block fas fa-user-cog edit_user_5190"></div>
									
									   <% end %>
					    		
					    </div>
					  </div>
					
					
					  <!--投稿フォーム-->
							<h2>New book</h2>
							<%= form_with model:@book, local:true do |f| %>
							<div class="field">
							  <label for="book_title">Title</label></br>
							  <%= f.text_field :title %>
							</div>
							<div class="field">
							  <label for="book_body">Body</label></br>
							  <%= f.text_area :body %>
							</div>
							<div class="action">
							  <%= f.submit 'Create Book' %>
							</div>
							<%end%>
					</div>
		    
  				<!--投稿一覧-->			
				  <div class="col-md-8 offset-md-1">
						<h2>Books</h2>
						    	<table class="table table-striped">
						      		<thead>
						        		<tr>
						        				<th></th>
						          			<th>title</th>
						          			<th>opinion</th>
						          			<th colspan="3"></th>
						        		</tr>
						        	</thead>
						        	<!--以下繰り返し-->	
						        	<tbody>
				         				<% @books.each do |book| %>
								          <tr>
								          	
								            <td>
								              <%= link_to user_path(book.user_id) do %>
								              <% end %>
								            </td>
								            <td>
								              <%= link_to book.title, book_path(book.id) %>
								            </td>
								            <td>
								              <%= book.body %>
								            </td>
								          </tr>
								         <% end %>
								        </tbody>
								        <!--ここまで-->	
						    	</table>
					</div>
		</div>
	</div>